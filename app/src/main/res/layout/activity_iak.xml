<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.myapplicationiak.ActivityIAK">


<ImageView
    android:id="@+id/pic1"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:src="@drawable/gambar1"
    android:scaleType="centerCrop"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Marcus Holloway"
    android:textColor="#000000"
    android:layout_below="@id/pic1"
    android:gravity="center"
    android:background="#f70505"
    android:id="@+id/marcus" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Share"
        android:textColor="#000000"
        android:gravity="center"
        android:background="#f70505"
        android:id="@+id/share" />

<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/marcus"
    android:layout_above="@id/marcus"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="93dp"/>

<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_below="@id/marcus"
    >
    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/marcus"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/marcus"
            android:text="@string/mh"
            android:id="@+id/isi"
            android:textSize="20dp"
            android:background="@color/black"
            android:textColor="#ffffff" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
